<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/margin_half">

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="@dimen/card_view_photo"
    android:layout_height="@dimen/card_view_photo"
    android:layout_gravity="center"
    android:elevation="@dimen/cv_elevation"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="16dp"
    app:contentPadding="@dimen/margin_1x"
    app:contentPaddingBottom="@dimen/margin_4x"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/photo_place_id"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:backgroundTint="@color/gray"
      android:contentDescription="@string/grey_photo_background_for_image_list_view"
      android:scaleType="centerCrop"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/moped_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      tools:text="Moped Name"/>

  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>