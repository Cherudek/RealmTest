<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="200dp"
  >

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_margin="@dimen/margin_1x"
    app:cardElevation="6dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/photo_place_id"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:backgroundTint="@color/gray"
      android:contentDescription="@string/grey_photo_background_for_image_list_view"
      android:scaleType="centerCrop"
      app:layout_constraintTop_toTopOf="@id/card_view"/>

    <TextView
      android:id="@+id/moped_name"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorWhite"
      android:fontFamily="@font/cagliostro"
      android:gravity="center"
      tools:text="Moped Name"/>

  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>